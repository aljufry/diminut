<!DOCTYPE html>
<html>
  <head>
    <title><%= t(:app_title) %><% if @page_title %> :: <%= @page_title %><% end %> </title>
    <link href='http://fonts.googleapis.com/css?family=Anaheim|Paprika' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    "ddsmoothmenu", :media => "all" %>
    <%= stylesheet_link_tag    "ddsmoothmenu-v", :media => "all" %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "ddsmoothmenu" %>
    <%= javascript_include_tag "jquery-1.8.3.min.js" %>
    <%= javascript_include_tag "application" %>

    <%= csrf_meta_tags %>

    <script type="text/javascript">
      ddsmoothmenu.init({
        mainmenuid : "smoothmenu1", //menu DIV id
        orientation : 'h', //Horizontal or vertical menu: Set to "h" or "v"
        classname : 'ddsmoothmenu', //class added to menu's outer DIV
        //customtheme: ["#1c5a80", "#18374a"],
        contentsource : "markup" //"markup" or ["container_id", "path_to_menu_file"]
      })
    </script>
    <link rel="icon" href="data:image/x-icon;base64,"/>
  </head>
  <body>
    <div class="main">
      <div class="top">
        <div class="title">
          <%= t :diminut%>
        </div>
      </div>
      <div class="middle">
        <div class="menu">
          <div id="smoothmenu1" class="ddsmoothmenu">
            <ul>
              <li>
                <a href="http://www.emgraft.com">Emgraft Systems</a>
              </li>              
              <% if session[:user_id]%>
              <li>
                <%= link_to(t(:subnets), :controller => 'subnets', :action => 'list') %>
                <ul>
                  <li>
                    <%= link_to(t(:new), :controller => 'subnets', :action => 'new') %>
                  </li>
                  <li>
                    <%= link_to(t(:list), :controller => 'subnets', :action => 'list') %>
                  </li>                  
                </ul>
              </li>
              <li>
                <%= link_to(t(:users), :controller => 'users', :action => 'list') %>
                <ul>
                  <li>
                    <%= link_to(t(:new), :controller => 'users', :action => 'new') %>
                  </li>
                  <li>
                    <%= link_to(t(:list), :controller => 'users', :action => 'list') %>
                  </li>                  
                </ul>
              </li>
              <% end %>              
              <% if session[:user_id] %>
              <li>
                <a href="#"><%= session[:user_name] %></a>
                <ul>
                  <li>
                    <%= link_to(t(:change_password), :controller => 'users', :action => 'change_password') %>
                  </li>
                  <li>
                    <%= link_to(t(:change_name), :controller => 'users', :action => 'change_name') %>
                  </li>
                  <li>                    
                    <%= link_to(t('logout'), :controller => 'access', :action => 'logout') %>                    
                  </li>
                </ul>
              </li>
              <% end %>
            </ul>
            <br style="clear: left" />
          </div>

          <div class="messages">
            <% if !flash[:notice].blank? %>
            <div class="notice">
              <%= flash[:notice] %>
            </div>
            <% end %>
            <% if !flash[:error].blank? %>
            <div class="error">
              <%= flash[:error] %>
            </div>
            <% end %>
            <% if !flash[:info].blank? %>
            <div class="info">
              <%= flash[:info] %>
            </div>
            <% end %>
          </div>

        </div>
        <div class="content">
          <%= yield %>
        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          <%= t :copyright %> <%= ApplicationController.year %>
          -
          <%= t :emgraft%>
        </div>
      </div>
    </div>

  </body>
</html>
