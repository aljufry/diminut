<table class="form">
  <tr>
    <td class="caption"><label for="name"><%= f.label(:server_name) %>:</label></td>
    <td class="data"> <%= f.text_field(:server_name, :maxlength => 255, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label(:model) %>:</label></td>
    <td class="data"> <%= f.text_field(:model, :maxlength => 255, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label(:operating_system) %>:</label></td>
    <td class="data"> <%= f.text_field(:operating_system, :maxlength => 100, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label(:serial_number) %>:</label></td>
    <td class="data"> <%= f.text_field(:serial_number, :maxlength => 255, :size => 30)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label(:ip) %>:</label></td>
    <td class="data"> <%= f.text_field(:ip, :maxlength => 15, :size => 20)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label(:public_ip) %>:</label></td>
    <td class="data"> <%= f.text_field(:public_ip, :maxlength => 100, :size => 20)  %> </td>
  </tr>
  <tr>
    <td class="caption"><label for="name"><%= f.label(:warranty) %>:</label></td>
    <td class="data"> <%= f.text_field(:warranty, :size => 10, :class => "datepicker")  %> </td>
  </tr>
  
  <tr>
    <td class="buttons" colspan="2"> 
      <%= submit_tag(t(:save)) %>
      <% if false %>
      <br/><br/><br/>      
      <%= link_to(t("list"), {:action => 'list'}, :class => "button") %>
      <%= link_to(t("delete"), {:action => 'delete', :id => @subnet.id}, :class => "button") %>
      <%= link_to(t("show"), {:action => 'show', :id => @subnet.id}, :class => "button") %>
      <% end %>
    </td>
  </tr>
</table>
<script type="text/javascript">
  var input = $("#server_server_name");
  if (input != null && input != undefined) {
    input.focus();
  }
  
  $('.datepicker').datepicker();
</script>