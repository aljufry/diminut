<% @page_title = t(:new_server) %>

<div class="pageTitle">
  <%= t(:new_server) %>
</div>

<div class="form">
  <%= form_for(:server, :url => {:action => 'create', :id => @subnet.id}) do |f| %>
  <% if @server.errors.any? %>
  
  <div class="error">
    <ul>
      <% @server.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= render(:partial => "form", :locals => {:f => f}) %>
  <% end %>
</div>
