<% @page_title = t(:change_password) %>

<div class="pageTitle">
  <%= t(:change_password) %>
</div>

<div class="form">
  <%= form_tag('/users/update_password', :method => :post) do %>
  <table class="form">    
    <tr>
      <td class="caption"><label for="name"><%= label_tag(:old_password, t(:old_password)) %>:</label></td>
      <td class="data"> <%= password_field_tag(:old_password, nil, :maxlength => 255, :size => 30)  %> </td>
    </tr>    
    <tr>
      <td class="caption"><label for="name"><%= label_tag(:new_password, t(:new_password)) %>:</label></td>
      <td class="data"> <%= password_field_tag(:new_password, nil, :maxlength => 255, :size => 30) %> </td>
    </tr>
    <tr>
      <td class="caption"><label for="name"><%= label_tag(:confirm_password, t(:confirm_password)) %>:</label></td>
      <td class="data"> <%= password_field_tag(:confirm_password, nil, :maxlength => 255, :size => 30) %> </td>
    </tr>
    <tr>
      <td class="buttons" colspan="2"> <%= submit_tag(t(:save)) %>      
    </tr>
  </table>
  <script type="text/javascript">
    var input = $("#old_password");
    if (input != null && input != undefined) {
      input.focus();
    }
  </script>
  <% end %>
</div>
